<!DOCTYPE html>
<html>
  <head>
    <title>DevLife</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <!-- Start of navbar -->
      <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <%= link_to 'DevLife', root_path, class:'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarColor01">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home
                    <span class="sr-only">(current)</span></a>
                </li>
                <%= link_to current_user.full_name, edit_user_registration_path, class:"nav-item btn btn-outline-primary" %>
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"nav-item btn btn-danger" %>
              </ul>

            <% else %>
              <%= link_to "Sign In", new_user_session_path, class:"nav-item btn btn-outline-primary ml-2" %>
              <%= link_to "Sign Up", new_user_registration_path, class:"nav-item btn btn-outline-primary ml-2" %>
            <% end %>

            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2 ml-2" type="text" placeholder="Search">
              <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
          </div>
          <!-- End of navbar -->

        </div>
        <%= yield %>

      </div>
    </body>
  </html>